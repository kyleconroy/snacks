<hr style="border-top: 1px dotted #aaa; margin: 0px;"/>
<% comments.each do |comment| %>
  <% if comment.user == @current_user %>
    <form action="/comments/<%= comment.id %>/destroy" method="post">
      <p style='margin-left:20px'><%= comment.text %> -<a href="/users/<%= comment.user.id %>"><%= comment.user.name %></a> <%= comment.created_at.to_time.ago_in_words %>
      <button type="submit" class="btn btn-danger btn-mini" onClick="confirm('Delete this comment?');">Delete Comment</button>
    </form></p>
  <% else %>
    <p style='margin-left:20px'><%= comment.text %> -<a href="/users/<%= comment.user.id %>"><%= comment.user.name %></a> <%= comment.created_at.to_time.ago_in_words %></p>
  <% end %>
<hr style="border-top: 1px dotted #ccc; margin: 0px;"/>
<% end %>